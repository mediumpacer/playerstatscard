<div class="player-card__top">
  <div class="player-card__image">
    <img src="modules/playerstatscard/assets/p{{player.id}}.png" alt="{{player.name.first}} {{player.name.last}}" />
  </div>
</div>

<div class="player-card__bottom">
  <h2 class="player-card__name">{{player.name.first}} {{player.name.last}}</h2>
  <p class="player-card__position">{{player.info.positionInfo}}</p>

  <div class="player-card__badge-container">
    <span class="player-card__badge badge-{{player.currentTeam.id}}">
      <span class="player-card__badge-text">{{player.currentTeam.name}}</span>
    </span>
  </div>

  <dl class="player-card__stats">
    <div class="player-card__stats-item">
      <dt class="player-card__stats-key">Appearances</dt>
      <dd class="player-card__stats-value">{{stats.appearances}}</dd>
    </div>
    <div class="player-card__stats-item">
      <dt class="player-card__stats-key">Goals</dt>
      <dd class="player-card__stats-value">{{stats.goals}}</dd>
    </div>
    <div class="player-card__stats-item">
      <dt class="player-card__stats-key">Assists</dt>
      <dd class="player-card__stats-value">{{stats.assists}}</dd>
    </div>
    <div class="player-card__stats-item">
      <dt class="player-card__stats-key">Goals per match</dt>
      <dd class="player-card__stats-value">{{stats.goalsPerMatch}}</dd>
    </div>
    <div class="player-card__stats-item">
      <dt class="player-card__stats-key">Passes per minute</dt>
      <dd class="player-card__stats-value">{{stats.passesPerMin}}</dd>
    </div>
  </dl>
</div>